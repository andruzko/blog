<table class="table table-striped">
  <tbody>
    <tr post_id='<%= @post.id %>'>
      <td rowspan="2"><p><%= @post.user.name %></p>
        <p><%= image_tag(avatar_url(@post.user), width:48) %></p></td>
      <td><p><h4><ins><%= link_to @post.title, @post %></ins></h4></p>
        <p><%= @post.body %></p>
      </td>
    <tr>
      <td>
        <div class="row">
          <div class="col-md-4">tags: <%= raw @post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')%>
          </div>
          <div class="col-md-4 col-md-offset-4"><%= link_to 'Back', posts_path, class: "btn btn-info" %>
            <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
</table>
<% if @post.comments.any? %>
    <h3>Comments</h3>
    <% @post.comments.each do |comment| %>
    <div class="comment">
      <p>
          <%= image_tag avatar_url(@post.user), width: '16px' %>
          <strong><%= comment.user.name %></strong>
        <span class="date">
          &nbsp; <%= comment.created_at.to_time.strftime('%m.%d.%Y at %H:%M') %>
        </span>
      </p>
      <p>
        <%= comment.body %>
      </p>
      <p>
        <%= link_to 'Destroy', [comment.post, comment],
                                method: :delete %>
      </p>
    </div>
  <% end %>
  <% else %>
    <h3>Comments are apcent</h3>
  <% end %>
 <% if current_user %>
      <%= form_for([@post, @post.comments.build]) do |f| %>
      <div class="comment">
        <div class="field">
          <%= f.label 'Comment' %>
          <%= f.text_area :body %>
        </div>
        <div class="field">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  <% end %>