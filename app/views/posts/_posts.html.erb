<% if @posts.count > 0 %> 
  <table class="table table-striped">
      <tbody>
        <% @posts.each do |post| %> 
            <tr post_id='<%= post.id %>' class="post_<%= post.id %>" >
              <td rowspan="2"><p><%= post.user.name %></p>
                <p><%= image_tag(avatar_url(post.user), width:48) %></p>
              </td>
              <td><p><h4><ins><%= link_to post.title, post %></ins></h4></p>
                <%= image_tag(post.image_url, class: "img-responsive img-center") %>
                <p><%= post.body.truncate(700) %></p>
              </td>
      <!--
              <td><%= link_to image_tag('plus.png', width:20), '#', class: 'add_rate' %>
              <h2 class='rate'></h2>
              <%= link_to image_tag('minus.png', width:20), '#', class: 'unrate' %></td>
              <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-info" %></td>
              <td><%= link_to 'Destroy', post, class: "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        -->
            <tr class="post_<%= post.id %>">
              <td>
                <div class="row">
                  <div class="col-md-4">tags: <%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')%>
                    <h4 class='rate'>
                    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
                    <%= post.rate %>
                    <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
                  </h4>
                  </div>
                  <div class="col-md-4 col-md-offset-4"><%= link_to 'Edit', edit_post_path(post), class: "btn btn-info" %>
                    <%= link_to 'Destroy', post, class: "btn btn-small btn-danger", method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></div>
                </div>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>
 <% else %>
  <h2><span class="glyphicon glyphicon-glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> There isn't posts for your requare</h2>
<% end %>
