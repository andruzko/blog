<div class="container-fluid">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %>">
      <%= value %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Sing UP</h1>
      <%= form_for(@user) do |f| %>
        <div class="field form-group">
          <%= f.label :name, class: "sr-only" %>
          <%= f.text_field(:name, class: "form-control", placeholder: "Name")%>
        </div class="field form-group">
        <div class="field form-group">
          <%= f.label :email, class: "sr-only" %>
        <%= f.email_field(:email, class: "form-control", placeholder: "Email") %> 
        </div>
        <div class="field form-group">
          <%= f.label :password, class: "sr-only" %>
        <%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
        </div>
        <div class="field form-group">
          <%= f.label :avatar_url, class: "sr-only" %>
        <%= f.text_field(:avatar_url, class: "form-control", placeholder: "avatar url") %>
        </div>
        <div class="field form-group">
          <%= submit_tag 'Register', class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>






<div class="modal-body">
  <h1>Sing UP</h1>
  <%= form_for(@user) do |f| %>
    <div class="form-group has-success has-feedback">
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field(:name, class: "form-control", placeholder: "Name")%>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="form-group has-success has-feedback">
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field(:email, class: "form-control", placeholder: "Email") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="form-group has-success has-feedback">
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field(:password, class: "form-control", placeholder: "Password") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="form-group has-success has-feedback">
      <%= f.label :avatar_url, class: "sr-only" %>
      <%= f.text_field(:avatar_url, class: "form-control", placeholder: "avatar url") %>
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    </div>
    <div class="modal-footer">
      <%= f.submit 'Register', class: 'btn btn-primary' %>
      <%= link_to 'Close', root_path, class: "btn btn-default", data: {dismiss: "modal"} %>
    </div>
  <% end %>
</div>
